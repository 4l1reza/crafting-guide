#!/bin/bash

function die {
    echo $*
    exit 1
}

VERSION_TYPE=""
while [[ "$VERSION_TYPE" != "major" && "$VERSION_TYPE" != "minor" && "$VERSION_TYPE" != "patch" ]]; then
    read -p "Major, minor, patch? " VERSION_TYPE
fi

npm version "$VERSION_TYPE" || die "Invalid version type: $VERSION_TYPE"
npm publish

grunt clean build